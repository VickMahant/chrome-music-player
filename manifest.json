{
  "manifest_version": 2,

  "name": "Chrome Music Player",
  "description": "Plays songs from your bookmarks",
  "version": "0.1",

  "options_page": "src/options.html",

  "icons": {
    "48": "src/img/icon.png"
  },

  "permissions": [
    "background",
    "bookmarks",
    "activeTab",
    "http://www.youtube.com/",
    "https://www.youtube.com/",
    "https://s.ytimg.com/",
    "http://s.ytimg.com/"
  ],

  "background": {
    "page": "src/background.html"
    //"scripts": ["player.js"]
    //"persistent": false
  },

  "browser_action": {
    "default_icon": "src/img/icon.png",
    "default_popup": "src/popup.html"
  }

  //"content_scripts": [{
  //  "js": ["https://s.ytimg.com/yts/jsbin/www-widgetapi-vfl9bgVTV/www-widgetapi.js", "https://www.youtube.com/iframe_api"]
  //}]
}